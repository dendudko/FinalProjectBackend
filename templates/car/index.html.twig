{% extends 'base.html.twig' %}

{% block title %}Car index{% endblock %}

{% block body %}
    <h1>Car index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <td>ModelName</td>
                <th>VIN</th>
                <th>EngineName</th>
                <th>ReleaseDate</th>
                <th>TransmissionType</th>
                <th>DriveType</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.ModelName }}</td>
                <td>{{ car.VIN }}</td>
                <td>{{ car.EngineName }}</td>
                <td>{{ car.ReleaseDate }}</td>
                <td>{{ car.TransmissionType }}</td>
                <td>{{ car.DriveType }}</td>
                <td>
                    <a href="{{ path('app_car_show', {'id': car.id}) }}">show</a>
                    <a href="{{ path('app_car_edit', {'id': car.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_car_new') }}">Create new</a>
{% endblock %}
