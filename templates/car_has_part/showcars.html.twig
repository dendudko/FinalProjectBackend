{% extends 'base.html.twig' %}

{% block title %}Cars found{% endblock %}

{% block body %}
    <h1>Cars found</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <td>ModelName</td>
                <th>VIN</th>
                <th>EngineName</th>
                <th>ReleaseDate</th>
                <th>TransmissionType</th>
                <th>DriveType</th>
            </tr>
        </thead>
        <tbody>
        {% for car in cars %}
            <tr>
                <td>{{ car.id }}</td>
                <td>{{ car.ModelName }}</td>
                <td>{{ car.VIN }}</td>
                <td>{{ car.EngineName }}</td>
                <td>{{ car.ReleaseDate }}</td>
                <td>{{ car.TransmissionType }}</td>
                <td>{{ car.DriveType }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <br>
    <button onclick="window.location.href = '/car_has_part'">Назад</button>
{% endblock %}